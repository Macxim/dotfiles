#!/bin/zsh
DIR_BIN="$( cd "$( dirname "${0}" )" && pwd )"
source $DIR_BIN/dotfiles

if [ "$FULLFIRE" = "true" ]
then
	source appstore
fi

# required first
source $DOTFILES/components/osx/setup
source $DOTFILES/components/git/setup
source $DOTFILES/components/brew/setup

source $DOTFILES/components/cli/setup
source $DOTFILES/components/node/setup

source $DOTFILES/apps/logitech/setup
source $DOTFILES/apps/browsers/setup
source $DOTFILES/apps/sublime-text3/setup

source $DOTFILES/apps/slate/setup
source $DOTFILES/apps/osx-enhancements/setup

source $DOTFILES/apps/download-and-sync/setup

source $DOTFILES/components/dyndns/setup
#source $DOTFILES/components/dnsmasq/setup
source $DOTFILES/components/amp/setup

source $DOTFILES/apps/chat/setup
source $DOTFILES/apps/multimedia/setup

source $DOTFILES/apps/misc

# stuff that require human interaction at the end
source $DOTFILES/components/dyndns/setup
source $DOTFILES/apps/prey/setup

# gems are slow & require password (because I don't use bundler blah blah...)
source $DOTFILES/components/ruby/setup

source $DOTFILES/apps/lazydev/setup
# todo add cron setup

echo ""
echo_success "BOOYA $CHAR_BOOM $CHAR_BOOM $CHAR_BOOM $CHAR_BOOM $CHAR_BOOM"
