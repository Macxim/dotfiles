#!/bin/zsh
source $DOTFILES/index.zsh

DIR_BIN="$( cd "$( dirname "${0}" )" && pwd )"
source $DIR_BIN/.symlinks

if [ "$FULLFIRE" = "true" ]
then
	source appstore
fi

# todo get this app not from appstore
# https://github.com/TermiT/Flycut
openifnot "Flycut" "/Applications/Flycut.app"

# required first
setup brew

if type "say" > /dev/null
then
	say "Password might be required"
fi
# Ask for the administrator password upfront
sudo -v

setup osx
setup git

setup node
setup _cli

setup logitech
setup browsers
setup atom

setup slate
setup osx-enhancements

setup download-and-sync

setup dyndns
#setup dnsmasq
setup amp

setup chat
setup multimedia

setup misc

# stuff that require human interaction at the end
setup dyndns
setup prey

# gems are slow & require password (because I don't use bundler blah blah...)
setup ruby

setup lazydev

setup sharing

# todo add cron setup

echo ""
echo_success "BOOYA $CHAR_BOOM $CHAR_BOOM $CHAR_BOOM $CHAR_BOOM $CHAR_BOOM"
