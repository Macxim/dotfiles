#!/bin/zsh
source $DIR_DOTFILES/backpack/functions.sh

echo_title_installupdate "NPM packages"

if [ "$FULLFIRE" = "true" ]
then
  source npmu
fi

PACKAGES=(
  csslint
  jshint
  jscs

  autoprefixer
  bower
  gulp
  grunt-cli
  happyplan-cli
  travis-encrypt
)

DIR_NODE_MODULES=/usr/local/lib/node_modules
for PKG in ${PACKAGES}; do
  if ! ls $DIR_NODE_MODULES | grep -e "^$PKG-" &> /dev/null
  then
    npm i -g $PKG
  fi
done
