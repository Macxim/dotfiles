#!/bin/zsh

export DOTFILES="$( cd "$( dirname "${0}" )"/../ && pwd )"
source $DOTFILES/index.zsh

echo "$CHAR_BOOM $CHAR_BOOM $CHAR_BOOM $CHAR_BOOM $CHAR_BOOM $CHAR_BOOM $CHAR_BOOM $CHAR_BOOM $CHAR_BOOM $CHAR_BOOM $CHAR_BOOM $CHAR_BOOM $CHAR_BOOM $CHAR_BOOM"
echo "$CHAR_BOOM  Set up ALL the things! $CHAR_BOOM"
echo "$CHAR_BOOM $CHAR_BOOM $CHAR_BOOM $CHAR_BOOM $CHAR_BOOM $CHAR_BOOM $CHAR_BOOM $CHAR_BOOM $CHAR_BOOM $CHAR_BOOM $CHAR_BOOM $CHAR_BOOM $CHAR_BOOM $CHAR_BOOM"


# Ask for the administrator password upfront
sudo -v

# update from remote
echo_title_update "from remote"

cd $DOTFILES
git pull origin master
git submodule init
git submodule update

export FULLINSTALL=false
if [ "$1" = "--full" ]
then
	FULLINSTALL=true
fi

source $DOTFILES/bin/install

echo ""
echo_success "We're done here\!"
echo ""