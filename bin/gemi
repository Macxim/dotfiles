#!/bin/zsh
source $DIR_DOTFILES/backpack/functions.sh

echo_title_installupdate "Ruby Gems"

if [ "$FULLFIRE" = "true" ]
then
  source gemu
fi

PACKAGES=(
  sass
  compass
  scss-lint

  # for damebio
  ceaser-easing
  animate-sass
  compass-normalize
)

DIR_RUBYGEMS=/Library/Ruby/Gems/2.0.0/gems
for PKG in ${PACKAGES}; do
  if ! ls $DIR_RUBYGEMS | grep -e "^$PKG-" &> /dev/null
  then
    sudo gem install $PKG
  fi
done
