#!/bin/zsh
source $DOTFILES/index.zsh

DIR_BIN="$( cd "$( dirname "${0}" )" && pwd )"
source $DIR_BIN/.symlinks

if [ "$FULLINSTALL" = "true" ]
then
  source appstore
fi

# required first
setup brew

echo ""
echo_warning "Password might be required."
echo ""

if [ "$FULLINSTALL" = "true" ]
then
  echo "And be careful, since it's you first run, it will probably be asked more than once. Check often until process is complete."
fi

# Ask for the administrator password upfront
sudo -v

setup osx
setup git

setup node
setup _cli
setup ssh

setup sublime

setup sync

setup browsers

setup osx-enhancements

setup chat
setup multimedia
setup misc

setup download

# stuff that require human interaction at the end
setup prey

# gems are slow & require password (because I don't use bundler blah blah...)
setup ruby

setup dock

killosx
