#!/bin/zsh
source $DIR_DOTFILES/backpack/functions.sh

if ! type "brew" > /dev/null; then
  echo_title_install "Homebrew (brew)"
  ruby -e "$(curl -fsSL https://raw.github.com/mxcl/homebrew/go)"
  brew doctor
  # note: brew install run
  # xcode-select --install
  # yeah this is cool
else
	echo_title "Homebrew (brew) already installed"
fi

source brewu

if ! brew tap | grep dupes > /dev/null; then
	echo_title "Tap brew dupes"
	brew tap homebrew/dupes
fi

echo_title_install "brew packages"

PACKAGES=(
	git
	hub

	node

	# for grunt-webfont
	fontforge
	ttfautohint

	# ruby
	# python
	#sudo easy_install pip ?

	mysql

	# phantomjs
	# casperjs
	# slimerjs

	# youtube-dl
	# sub2srt
)

for pkg in $PACKAGES; do
	brew install $pkg 2>&1 | grep -v "already installed"
done
