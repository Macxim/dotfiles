#!/bin/zsh

gemig gifme
gimg cloudapp_api

brewinstall imagemagick
brewinstall ffmpeg

CLOUDAPP_CREDS=$HOME/.cloudapp
if [ ! -e $CLOUDAPP_CREDS ]
then
  echo "Enter Cloud.app login/password"
  read CLOUDAPP_LOGIN
  read CLOUDAPP_PWD

	echo $CLOUDAPP_LOGIN >> $CLOUDAPP_CREDS
	echo $CLOUDAPP_PWD >> $CLOUDAPP_CREDS
fi
