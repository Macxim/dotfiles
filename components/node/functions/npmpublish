#!/bin/zsh

# `npmpublish` with an optional argument `patch`/`minor`/`major`/`<version>`
# defaults to `patch`
function npmpublish() {
  git pull --rebase && \
  rm -rf node_modules && \
  npm install && \
  npm test && \

  mversion ${1:=patch} -m -n && \

  npm publish && \

  git push origin master && \
  git push origin master --tags
}
